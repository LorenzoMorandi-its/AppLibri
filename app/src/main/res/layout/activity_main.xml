<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000">

        <!-- Barra superiore marrone -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/legno" />

        <!-- Contenuto principale -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Pulsante Registrazione -->
            <Button
                android:id="@+id/button_registrazione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:backgroundTint="#D2B48C"
                android:padding="25dp"
                android:textSize="30sp"
                android:text="REGISTRAZIONE"
                android:textColor="#000000" />

            <!-- Spaziatura -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Pulsante Login -->
            <Button
                android:id="@+id/button_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:backgroundTint="#D2B48C"
                android:padding="25dp"
                android:textSize="30sp"
                android:text="LOGIN"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Barra inferiore marrone -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/legno" />
    </LinearLayout>

    <!-- Lista dei libri -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <!-- ProgressBar e TextView per la percentuale -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginEnd="8dp"
            android:progress="0"
            android:max="100" />

        <TextView
            android:id="@+id/textViewPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
